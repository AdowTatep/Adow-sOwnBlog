@model Adow_sOwnBlog.Models.Article
@{
    ViewBag.Title = "showArticle";
}


<section class="list-group article">
        <article class="list-group-item">
            <h4 class="list-group-item-heading">Model.title</h4>
            <aside class="categories">
                @foreach (Adow_sOwnBlog.Models.ArticleCategory category in Model.categories)
                {

                    <span class="label label-default">@Html.ActionLink(category.name, "mostraCategoria", "Home", new { @cat = category }, null)</span>
                }
            </aside>
            <section class="list-group-item-text">
                @Html.Raw(Model.content)
            </section>
        </article>
    }
</section>