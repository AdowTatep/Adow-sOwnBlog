@model Adow_sOwnBlog.Models.Article
@{
    ViewBag.Title = "Adow's Own Blog";
}

<aside class="col-xs-12 col-sm-3 col-md-2">
    @Html.Partial("_Sidebar", ViewData["Categories"])
</aside>

<main class="col-xs-12 col-sm-9 col-md-10">

    <section class="list-group article">

        <article class="list-group-item">
            <h4 class="list-group-item-heading">@Model.title</h4>
            <aside class="categories">
                @foreach (Adow_sOwnBlog.Models.ArticleCategory category in Model.categories)
                {
                    <span class="label label-default">@Html.ActionLink(category.name, "showCategory", "Home", new { @cat = category }, null)</span>
                }
            </aside>
            <section class="list-group-item-text">
                @Html.Raw(Model.content)
            </section>
        </article>

    </section>
</main>